<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maBlueWithAHintOfPurple</item>
        <item name="colorPrimaryVariant">@color/maBlueWithAHintOfPurpleTwo</item>
        <item name="colorOnPrimary">@color/maWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maTeal200</item>
        <item name="colorSecondaryVariant">@color/maTeal700</item>
        <item name="colorOnSecondary">@color/maBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="tbTitleStyle">@style/Marvel.Widget.TextView.BlackColor.Large</item>
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/maDarkSlateBlue</item>
        <item name="android:colorBackground">@color/maGreyLight</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:layoutDirection">ltr</item>

        <!-- Start new activity animation slide in and slide out  -->
        <item name="android:windowAnimationStyle">@style/maCustomActivityAnimation</item>
        <!-- Text Colors -->
        <item name="prefixTextColor">@color/maBlueWithAHintOfPurpleFaded</item>
        <item name="hintTextColor">@color/maBlueGrey</item>
        <item name="maGreyTextColor">@color/maGrey</item>
        <item name="maWhiteColor">@color/maWhite</item>
        <item name="maBlackColor">@color/maBlack</item>
    </style>

    <style name="maCustomActivityAnimation" parent="@android:style/Animation.Activity">
        <!-- specify enter and exit transitions -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>