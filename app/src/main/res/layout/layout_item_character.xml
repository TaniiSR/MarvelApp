<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="78dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/ma_margin_extra_small">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCharactertIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="@dimen/ma_margin_extra_small"
        android:layout_marginTop="@dimen/ma_margin_two_dp"
        app:cardBackgroundColor="@color/maWhite"
        app:cardCornerRadius="100dp"
        app:contentPadding="@dimen/ma_margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Marvel.Widget.TextView.BlackColor.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ma_margin_small"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0dp"
        android:lines="2"
        app:layout_constraintEnd_toEndOf="@id/cvCharactertIcon"
        app:layout_constraintStart_toStartOf="@id/cvCharactertIcon"
        app:layout_constraintTop_toBottomOf="@id/cvCharactertIcon"
        tools:text="Send money" />

</androidx.constraintlayout.widget.ConstraintLayout>
